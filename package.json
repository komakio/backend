{
  "name": "komakio-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build api && nest build consumers",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "dev:jobs": "npm run start:dev consumers -- --webpackPath webpack-consumers.config.js",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "tsc": "tsc",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.3.1",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/microservices": "^7.0.3",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/terminus": "^7.0.0-pre.2",
    "@sentry/node": "^5.15.0",
    "amqp-connection-manager": "^3.2.0",
    "amqplib": "^0.5.5",
    "apple-signin-auth": "^1.0.4",
    "bcrypt": "3.0.7",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.1",
    "google-auth-library": "^5.10.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.5",
    "node-gcm": "^1.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.4",
    "sha2": "^1.0.2",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/amqplib": "^0.5.13",
    "@types/express": "^4.17.3",
    "@types/jest": "25.1.4",
    "@types/mongodb": "^3.5.2",
    "@types/node": "^13.9.1",
    "@types/node-gcm": "^1.0.0",
    "@types/node-pushnotifications": "^1.0.3",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@backend/config/(.*)": "<rootDir>/libs/config/src/$1",
      "@backend/config": "<rootDir>/libs/config/src",
      "@backend/mongo/(.*)": "<rootDir>/libs/mongo/src/$1",
      "@backend/mongo": "<rootDir>/libs/mongo/src",
      "@backend/logger/(.*)": "<rootDir>/libs/logger/src/$1",
      "@backend/logger": "<rootDir>/libs/logger/src",
      "@backend/users/(.*)": "<rootDir>/libs/users/src/$1",
      "@backend/users": "<rootDir>/libs/users/src",
      "@backend/profiles/(.*)": "<rootDir>/libs/profiles/src/$1",
      "@backend/profiles": "<rootDir>/libs/profiles/src",
      "@backend/rabbitmq/(.*)": "<rootDir>/libs/rabbitmq/src/$1",
      "@backend/rabbitmq": "<rootDir>/libs/rabbitmq/src",
      "@backend/exceptions/(.*)": "<rootDir>/libs/exceptions/src/$1",
      "@backend/exceptions": "<rootDir>/libs/exceptions/src",
      "@backend/requests/(.*)": "<rootDir>/libs/requests/src/$1",
      "@backend/requests": "<rootDir>/libs/requests/src",
      "@backend/notifications/(.*)": "<rootDir>/libs/notifications/src/$1",
      "@backend/notifications": "<rootDir>/libs/notifications/src"
    }
  }
}
