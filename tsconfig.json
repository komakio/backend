{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@config/config": [
        "libs/config/src"
      ],
      "@config/config/*": [
        "libs/config/src/*"
      ],
      "@mongo/mongo": [
        "libs/mongo/src"
      ],
      "@mongo/mongo/*": [
        "libs/mongo/src/*"
      ],
      "@logger/logger": [
        "libs/logger/src"
      ],
      "@logger/logger/*": [
        "libs/logger/src/*"
      ],
      "@users/users": [
        "libs/users/src"
      ],
      "@users/users/*": [
        "libs/users/src/*"
      ],
      "@profiles/profiles": [
        "libs/profiles/src"
      ],
      "@profiles/profiles/*": [
        "libs/profiles/src/*"
      ],
      "@rabbitmq/rabbitmq": [
        "libs/rabbitmq/src"
      ],
      "@rabbitmq/rabbitmq/*": [
        "libs/rabbitmq/src/*"
      ],
      "@exceptions/exceptions": [
        "libs/exceptions/src"
      ],
      "@exceptions/exceptions/*": [
        "libs/exceptions/src/*"
      ],
      "@requests/requests": [
        "libs/requests/src"
      ],
      "@requests/requests/*": [
        "libs/requests/src/*"
      ],
      "@notifications/notifications": [
        "libs/notifications/src"
      ],
      "@notifications/notifications/*": [
        "libs/notifications/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}